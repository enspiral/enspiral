= form_for ([:staff, @project_person]) do |f|

  -if @project_person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_person.errors.count, "error")} prohibited this project_person from being saved:"
      %ul
        - @project_person.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :person_id, 'Person'
    = f.select :person_id, Person.all.collect { |person| [person.name, person.id] }, :selected => @project_person.person_id
  .field
    = f.label :project_id, 'Project'
    = f.select :project_id, Project.all.collect { |project| [project.name, project.id] }, :selected => @project_person.project_id

  .actions
    = f.submit 'Save'

