%h1 Account Permissions for #{@account.name}
%p Public? #{@account.public.inspect}

%h2 Add Person to Account Owners
=simple_form_for(@account_permission, :url => staff_account_permissions_path(@account)) do |f|
  =f.input :person_id, :as => :select, :collection => Person.active.all
  =f.submit

%h2 Account Owners
%table
  %thead
    %th Name
    %th Remove
  %tbody
    -@account.account_permissions.each do |perm|
      -puts perm.inspect
      %tr
        %td=perm.person.name
        %td=link_to('Remove', staff_account_permission_path(perm.account, perm), :method => :delete)

