<h2><%=h @person.full_name %></h2>

<table>
  <tr>
    <td>
      <%= image_tag @person.gravatar_url(:size => 256)%>
    </td>
    <td valign=top>
      <p>
        <b>Job title:</b>
        <%=h @person.job_title %>
      </p>
      <p>
        <b>City:</b>
        <%=h @person.city %>
      </p>

      <p>
        <b>Email:</b>
        <%=h @person.email %>
      </p>
    </td>
  </tr>
</table>

<hr />

<h3>Working on Projects:</h3>

<table>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to (image_tag project.image.url(:thumb)), project %></td>
      <td>
        <h2><%= link_to project.name, project %></h2>
        <p><%=h project.description %></p>
      </td>
      <td>
        <%= link_to 'Edit', edit_project_path(project) %><br />
        <%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>


