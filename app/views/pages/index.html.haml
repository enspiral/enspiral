  #social.drop-shadow
    %h3 Find us on:
    =link_to image_tag('twit.png'), "http://twitter.com/enspiral"
    =link_to image_tag('fb.png'), "http://www.facebook.com/#!/pages/Enspiral/161369397227484"
    =link_to image_tag('lin.png'), "http://www.linkedin.com/company/916024"
    .newsletter
      =link_to "Newsletter sign up...", "http://eepurl.com/fuW6E"
  #featured-people
    %h2 some of the team
    = render :partial => 'team_matrix', :locals => {:people => @people}
  #latest-tweets
    %h2 latest tweets
    = render :partial => 'twitter'

 
