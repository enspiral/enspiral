= form_for([@commentable, @comment]) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
      %td= f.label :text
      %td= f.text_area :text
  .actions
    = f.submit
