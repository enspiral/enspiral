#static_page
  .row
    #left_bar.span3
      %h1 Contact Us
      .sub_nav
        =render :partial => 'marketing/static_pages/sub_nav'
    .span9
      .row
        .span3
          %h2 Talk to us
          .vcard.contact
            .name 
              %strong Alanna Krause (General Enquiries)
            .email alanna@enspiral.com
            .telephone +64 22 064 7011
          .vcard.contact
            .name 
              %strong
                Jonathon Avery (Engineering)
            .email jonathon.avery@enspiral.com
            .telephone +64 21 220 2200
          %h2
            Wellington Office
          .vcard
            %p.telephone +64 4 974 8207
            .address
              %p 2/22 Allen St 
              %p Wellington 
              %p New Zealand
            .map
              =link_to "https://maps.google.com/maps?q=2%2F22+Allen+St++Wellington++New+Zealand&hl=en&sll=37.0625,-95.677068&sspn=35.273162,86.572266&hnear=2%2F22+Allen+St,+Te+Aro,+Wellington+6011,+Wellington,+New+Zealand&t=m&z=16", target: "_blank" do
                %img{src: 'http://maps.google.com/staticmap?center=-41.29312,174.78217&zoom=15&size=200x200&maptype=mobile&markers=-41.29312,174.78217,red&sensor=false'}
        .span6
          %h2 Send us a message
          #contact-form.form-inline
            = form_tag (marketing_contact_path), id: 'contact_form', method: 'post', remote: true do
              .control-group
                %label{:for => 'name'} name
                %input#name{:type => 'text', :name => 'name'}
              .control-group
                %label{:for => 'email'} email
                %input#email{:type => 'text', :name => 'email'}
              .control-group
                %label{:for => 'location'} location
                %input#location{:type => 'location', :name => 'location'}
              .control-group
                %label{:for => 'enquiry'} enquiry
                %textarea#enquiry{:type => 'text', :name => 'enquiry'}
              #message.alert.alert-notice
              = submit_tag 'Send', :id => 'submit'
