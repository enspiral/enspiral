<table>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to (image_tag project.image.url(:thumb)), project %></td>
      <td>
        <h2><%= link_to project.name, project %></h2>
        <p><%=h project.description %></p>
      </td>
      <td>
        <%= link_to 'Edit', edit_project_path(project) %><br />
        <%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

