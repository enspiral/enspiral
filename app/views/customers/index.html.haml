- title("Customers")
.row
  %h1.span5 Customers
  .model_actions.span5
    = link_to  new_customer_path, class: 'btn' do
      New Customer
%table.table.table-striped.customers
  %thead
    %tr
      %th
      %th
  %tbody
    - @customers.each do |customer|
      %tr
        %td.actions
          %a{title: "Edit #{customer.name}", href: "#{edit_customer_path(customer)}", rel: 'tooltip'}
            %i.icon-pencil
          =link_to customer_path(customer), method: 'delete', confirm: "Delete #{customer.name}", title: "Delete #{customer.name}", class: 'red_ink',  :html_options => { rel: 'tooltip' } do
            %i.icon-remove
        %td= link_to customer.name, customer_path(customer)
