= form_for ([:staff, @booking]) do |f|
  -if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :week
    = f.date_select :week
  .field
    = f.label :time
    = f.number_field :time
  .actions
    = f.submit 'Save'
