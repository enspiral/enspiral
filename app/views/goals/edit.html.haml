= form_for(@goal) do |f|

  -if @goal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@goal.errors.count, "error")} prohibited this goal from being saved:"
      %ul
        - @goal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :completion_description
    = f.text_field :completion_description
  .field
    = f.label :score
    = f.text_field :score

  .actions
    = f.submit 'Save'

