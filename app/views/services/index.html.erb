<table>
  <% @services.each do |service| %>
    <tr>
      <td><%= link_to (image_tag service.image.url(:thumb)), service %></td>
      <td>
        <h2><%= link_to service.name, service %></h2>
        <p><%=h service.description %></p>
      </td>
      <td>
        <%= link_to 'Edit', edit_service_path(service) %><br />
        <%= link_to 'Destroy', service, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New service', new_service_path %>