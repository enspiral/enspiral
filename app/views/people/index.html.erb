<h1>The Enspiral Team</h1>

<table cellborder=10 cellpadding=20>

<% @people.each do |person| %>
  <tr>
    <td><%= link_to (image_tag person.gravatar_url), person %></td>
    <td><%= link_to person.full_name, person %></td>
    <td><%=h person.job_title %></td>
	<td><%=h person.city %></td>
    <td><%=h person.email %></td>
    <td>
      <%= link_to 'Edit', edit_person_path(person) %>
      <%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New person', new_person_path %>
