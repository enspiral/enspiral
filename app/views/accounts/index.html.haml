- name = @company ? @company.name : current_person.name
%h1 Accounts for #{name}
%table
  %tr
    %th Name
    %th Available Balance
    %th Invoiced

  - @accounts.each do |account|
    %tr
      %td= link_to account.name, [@company, account]
      %td= number_to_currency(account.balance)
      %td= number_to_currency(account.pending_total)

