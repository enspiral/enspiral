%h1 Project Listings
%h2 Your Projects
%table
  %tr
    %th Project
    %th Status
    %th Customer
    %th &nbsp;
    %th &nbsp;

  - @current_projects.each do |project|
    %tr
      %td= project.name
      %td= project.status
      %td= project.customer ? project.customer.name : ''
      %td= link_to 'Edit', edit_staff_project_path(project)
      %td= link_to 'Delete', staff_project_path(project), :confirm => 'Are you sure?', :method => :delete

%h2 All Projects
%table
  %tr
    %th Project
    %th Status
    %th Customer
    %th &nbsp;

  - @all_projects.each do |project|
    %tr
      %td= project.name
      %td= project.status
      %td= project.customer ? project.customer.name : ''
      %td= link_to 'Edit',  edit_staff_project_path(project)
%br

= link_to 'New Project', new_staff_project_path
