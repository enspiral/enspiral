%table.table.table-striped.tablesorter#details
  %thead
    %tr
      %th Type
      - date.each do |d|
        %th= d
  %tbody
    - reports.each do |type, value|
      - if type == "Net Staff Accounts"
        %tr{style: "color: rgb(180, 180, 13); font-weight: bold;"}
          %td.text_filter= type
          - value.each do |v|
            %td= number_to_currency v
      - elsif type == "Funds after staff paid out"
        %tr{style: "color: rgb(233, 130, 18); font-weight: bold; border: 10px; border-bottom: 2px solid;"}
          %td.text_filter= type
          - value.each do |v|
            %td= number_to_currency v
      - elsif type == "Tax to date"
        %tr{style: "color: red; font-weight: bold;"}
          %td.text_filter= type
          - value.each do |v|
            %td= number_to_currency v
      - else  
        %tr
          %td.text_filter= type
          - value.each do |v|
            %td= number_to_currency v
%h1 TOP 10 CUSTOMERS
- top_customers.each_with_index do |top_customer, index|
  %table.table.table-striped.tablesorter#details
    %thead
      %tr
        %th Name
        %th= date[index]
    %tbody
      - top_customer.each do |name, amount|
        %tr
          %td= name
          %td= number_to_currency amount

=content_for :javascripts do
  :javascript
    $('.tablesorter').tablesorter()