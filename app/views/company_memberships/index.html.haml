.row
  %h1.span5.bottom_margin
    Company Memberships for 
    %span.attention #{@company.name}
  .model_actions.span5
    - if current_person.company_admin?(@company) || current_user.admin?
      =link_to('New membership', new_company_company_membership_path(@company), class: 'btn')
      =link_to('New person', new_person_company_company_memberships_path(@company), class: 'btn')

%table.table.table-striped.memberships
  %tbody
    -@memberships.each do |m|
      %tr
        %td.actions
          =link_to edit_company_company_membership_path(@company, m) do
            %i.icon-pencil
          =link_to [@company, m], method: :delete, class: 'red_ink', confirm: 'Are you sure you want to remove this person?' do
            %i.icon-remove
        %td=link_to m.person.name, profile_path(m.person)
        %td=m.role
        %td.align-right.orange_ink=m.admin ? 'admin' : ''
