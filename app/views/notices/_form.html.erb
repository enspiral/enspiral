<%= form_for(@notice) do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

      <ul>
      <% @notice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><%= f.label :summary %></td>
      <td><%= f.text_field :summary %></td>
    </tr>
    <tr>
      <td><%= f.label :text %></td>
      <td><%= f.text_area :text %></td>
    </tr>
  </table>

  <table>
    <tr>
      <td><%= f.check_box :notify %></td>
      <td><%= f.label :notify, 'Email a notification to all users in enspiral' %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
