- name = @company ? @company.name : current_person.name

.row
  %h1.span5 Accounts for #{name}
  .model_actions
    -if @company
      =link_to 'New Account', new_company_account_path(@company), class: 'btn'
    -else
      =link_to 'New Account', new_account_path, class: 'btn'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Available Balance
      %th Invoiced

  %tbody
    - @accounts.each do |account|
      %tr
        %td= link_to account.name, [@company, account]
        -if account.balance >= 0
          %td.green_ink= number_to_currency(account.balance)
        -else
          %td.red_ink= number_to_currency(account.balance)
        %td= number_to_currency(account.pending_total)

